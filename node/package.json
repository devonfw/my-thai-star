    "@nestjs/core": "^7.0.7",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/swagger": "4.5.1",
    "@nestjs/terminus": "7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "handlebars": "^4.7.7",
