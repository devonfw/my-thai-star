  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint {src,apps,libs,test}/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch --unhandled-rejections=strict",
    "test:watch:cov": "jest --watch --coverage",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest.js --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "documentation": "compodoc -p tsconfig.json -s"
  },
  "dependencies": {
