{
  "name": "template",
  "version": "0.0.1",
  "description": "server template for Devon4Node",
  "author": "mmaganam",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "nodemon",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "compile": "tsc"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.9",
    "@nestjs/core": "^5.3.10",
    "@nestjs/microservices": "^5.3.8",
    "@nestjs/passport": "^5.0.1",
    "@nestjs/swagger": "^2.5.0",
    "@nestjs/typeorm": "^5.2.2",
    "@nestjs/websockets": "^5.3.8",
    "@types/helmet": "0.0.42",
    "bcryptjs": "^2.4.3",
    "config": "^2.0.1",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "npm": "^6.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.1",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.7",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.11",
    "@types/bcryptjs": "^2.4.1",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "@types/jest": "^21.1.10",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.116",
    "@types/node": "^9.6.32",
    "@types/passport": "^0.4.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.4",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.3",
    "husky": "^1.1.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.8.0",
    "typescript": "3.1.3",
    "webpack": "4.19.0",
    "webpack-cli": "^2.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test",
      "...": "..."
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
